<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_user_login_unit"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:contentDescription="@string/unit"
            android:scaleType="fitCenter"
            android:src="@drawable/circle_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/_0"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_login_unit"
            app:layout_constraintEnd_toEndOf="@+id/iv_user_login_unit"
            app:layout_constraintStart_toStartOf="@+id/iv_user_login_unit"
            app:layout_constraintTop_toTopOf="@+id/iv_user_login_unit" />

        <TextView
            android:id="@+id/tv_system_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="@string/unit"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView_score"
            app:layout_constraintStart_toStartOf="@+id/textView_score"
            app:layout_constraintTop_toBottomOf="@+id/textView_score" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_user_login_unit"
            app:layout_constraintTop_toTopOf="@+id/iv_user_login_unit">

            <TextView
                android:id="@+id/textView_id_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/registered_iot_system" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHeight_max="50dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/registered_iot_system_description" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_user_login_ph_unit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/unit"
            android:scaleType="fitCenter"
            android:src="@drawable/circle_container"
            app:layout_constraintEnd_toStartOf="@+id/iv_user_login_temperature_system_unit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_user_login_unit" />

        <TextView
            android:id="@+id/tv_ph_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/_0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_login_ph_unit"
            app:layout_constraintEnd_toEndOf="@+id/iv_user_login_ph_unit"
            app:layout_constraintStart_toStartOf="@+id/iv_user_login_ph_unit"
            app:layout_constraintTop_toTopOf="@+id/iv_user_login_ph_unit" />

        <TextView
            android:id="@+id/tv_ph_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="@string/unit"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_ph_total"
            app:layout_constraintStart_toStartOf="@+id/tv_ph_total"
            app:layout_constraintTop_toBottomOf="@+id/tv_ph_total" />

        <TextView
            android:id="@+id/tv_ph_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ph_system"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_user_login_ph_unit"
            app:layout_constraintStart_toStartOf="@+id/iv_user_login_ph_unit"
            app:layout_constraintTop_toBottomOf="@+id/iv_user_login_ph_unit" />

        <ImageView
            android:id="@+id/iv_user_login_temperature_system_unit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/unit"
            android:scaleType="fitCenter"
            android:src="@drawable/circle_container"
            app:layout_constraintEnd_toStartOf="@+id/iv_user_login_a_feeding_unit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_user_login_ph_unit"
            app:layout_constraintTop_toTopOf="@id/iv_user_login_ph_unit" />

        <TextView
            android:id="@+id/tv_temperature_system_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/_0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_login_temperature_system_unit"
            app:layout_constraintEnd_toEndOf="@+id/iv_user_login_temperature_system_unit"
            app:layout_constraintStart_toStartOf="@+id/iv_user_login_temperature_system_unit"
            app:layout_constraintTop_toTopOf="@+id/iv_user_login_temperature_system_unit" />

        <TextView
            android:id="@+id/tv_temperature_system_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="@string/unit"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_temperature_system_total"
            app:layout_constraintStart_toStartOf="@+id/tv_temperature_system_total"
            app:layout_constraintTop_toBottomOf="@+id/tv_temperature_system_total" />

        <TextView
            android:id="@+id/tv_temperature_system_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature_system_login"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_user_login_temperature_system_unit"
            app:layout_constraintStart_toStartOf="@+id/iv_user_login_temperature_system_unit"
            app:layout_constraintTop_toBottomOf="@+id/iv_user_login_temperature_system_unit" />

        <ImageView
            android:id="@+id/iv_user_login_a_feeding_unit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/unit"
            android:scaleType="fitCenter"
            android:src="@drawable/circle_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_user_login_temperature_system_unit"
            app:layout_constraintTop_toTopOf="@id/iv_user_login_ph_unit" />

        <TextView
            android:id="@+id/tv_a_feeding_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/_0"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_user_login_a_feeding_unit"
            app:layout_constraintEnd_toEndOf="@+id/iv_user_login_a_feeding_unit"
            app:layout_constraintStart_toStartOf="@+id/iv_user_login_a_feeding_unit"
            app:layout_constraintTop_toTopOf="@+id/iv_user_login_a_feeding_unit" />

        <TextView
            android:id="@+id/tv_a_feeding_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="@string/unit"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_a_feeding_total"
            app:layout_constraintStart_toStartOf="@+id/tv_a_feeding_total"
            app:layout_constraintTop_toBottomOf="@+id/tv_a_feeding_total" />

        <TextView
            android:id="@+id/tv_a_feeding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_feeding"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_user_login_a_feeding_unit"
            app:layout_constraintStart_toStartOf="@+id/iv_user_login_a_feeding_unit"
            app:layout_constraintTop_toBottomOf="@+id/iv_user_login_a_feeding_unit" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>